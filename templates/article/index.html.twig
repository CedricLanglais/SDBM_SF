{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <h1>Liste des Articles</h1>

    <a href="{{ path('app_article_new') }}">Créer un nouvel article</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'Article</th>
                <th>Prix d'achat</th>
                <th>Volume</th>
                <th>Titrage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nomArticle }}</td>
                <td>{{ article.prixAchat }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.titrage }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">Afficher</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Non trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
