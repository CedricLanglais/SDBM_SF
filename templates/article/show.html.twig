{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom de l'Article</th>
                <td>{{ article.nomArticle }}</td>
            </tr>
            <tr>
                <th>Prix de l'achat</th>
                <td>{{ article.prixAchat }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ article.volume }}</td>
            </tr>
            <tr>
                <th>Titrage</th>
                <td>{{ article.titrage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">Retour à la liste</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Éditer</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
