{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ ticket.annee }}</td>
            </tr>
            <tr>
                <th>Numero du ticket</th>
                <td>{{ ticket.numeroTicket }}</td>
            </tr>
            <tr>
                <th>Date de la vente</th>
                <td>{{ ticket.dateVente ? ticket.dateVente|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}">Retour à la liste</a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">Éditer</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
