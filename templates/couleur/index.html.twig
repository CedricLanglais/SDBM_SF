{% extends 'base.html.twig' %}

{% block title %}Liste des Couleurs{% endblock %}

{% block body %}
    <h1>Liste des Couleurs</h1>

    <a href="{{ path('app_couleur_new') }}">Créer une nouvelle Couleur</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de la Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.nomCouleur }}</td>
                <td>
                    <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}">Afficher</a>
                    <a href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Rien trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
